{
  "expo": {
    "name": "Metroon",
    "slug": "Metroon",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/img/icon3.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/img/splash.png",
      "resizeMode": "cover",
      "backgroundColor": "#1A2940"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Este aplicativo usa sua localização para mostrar recursos específicos do site."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/img/adaptive-icon.png",
        "backgroundColor": "#1A2940"
      },
      "permissions": ["ACCESS_FINE_LOCATION"],
      "package": "com.ruanggd123.Metroon"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "724454a8-c15c-4939-bf40-6c006d4e8c55"
      }
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow $(PRODUCT_NAME) to use your location."
        }
      ]
    ]
  }
}
